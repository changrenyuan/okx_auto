# OKX API 配置
OKX_API_KEY=your-api-key-here
OKX_SECRET_KEY=your-secret-key-here
OKX_PASSPHRASE=your-passphrase-here
OKX_BASE_URL=https://www.okx.com

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/okx_quant.log

# 交易配置
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=0.05
LEVERAGE_LIMIT=20
TIMEOUT=30

# 策略配置
ENABLE_LIQUIDATION_HUNTING=true
ENABLE_FUNDING_ARBITRAGE=true
ENABLE_MARKET_MAKING=false

# WebSocket 配置
WS_RECONNECT_DELAY=5
WS_PING_INTERVAL=20

# 代理配置（如果在国内网络需要）
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# 或者使用 SOCKS5 代理（任选一种）
# ALL_PROXY=socks5://127.0.0.1:7891
